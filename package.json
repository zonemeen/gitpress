{
  "name": "@zonemeen/gitpress",
  "version": "1.0.0",
  "description": "Create your blog platform from Markdown files via github actions",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "all": "pnpm lint && pnpm build && pnpm package",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zonemeen/gitpress.git"
  },
  "keywords": [
    "actions",
    "node",
    "markdown",
    "blog",
    "github pages",
    "vercel"
  ],
  "author": "zonemeen <miqilin18@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.0.3",
    "dayjs": "^1.11.3",
    "ejs": "^3.1.8",
    "fs-extra": "^10.1.0",
    "gray-matter": "^4.0.3",
    "markdown-it": "^13.0.1",
    "slugify": "^1.6.5"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.1",
    "@types/fs-extra": "^9.0.13",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^17.0.35",
    "@types/showdown": "^2.0.0",
    "@typescript-eslint/parser": "^5.28.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-github": "^4.3.6",
    "husky": "^8.0.1",
    "js-yaml": "^4.1.0",
    "lint-staged": "^13.0.2",
    "prettier": "2.7.1",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write src/**/*.ts",
      "eslint --fix"
    ]
  }
}